@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }
    .hero {
        text-align: center;
        color: white;
        padding: 4rem 1rem;
    }
    .hero h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }
    .hero .tagline {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        opacity: 0.95;
    }
    .hero .cta-buttons {
        display: flex;
        gap: 1.5rem;
        justify-content: center;
        flex-wrap: wrap;
        margin-top: 2rem;
    }
    .cta-button {
        display: inline-block;
        padding: 1rem 2.5rem;
        font-size: 1.2rem;
        font-weight: bold;
        text-decoration: none;
        border-radius: 50px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        transition: transform 0.3s, box-shadow 0.3s;
    }
    .cta-primary {
        background: #FFD700;
        color: #333;
    }
    .cta-secondary {
        background: rgba(255,255,255,0.2);
        color: white;
        border: 2px solid white;
    }
    .cta-button:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.4);
    }
    .features {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
    }
    .feature-card {
        background: white;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        transition: transform 0.3s;
    }
    .feature-card:hover {
        transform: translateY(-10px);
    }
    .feature-card .icon {
        font-size: 3.5rem;
        margin-bottom: 1rem;
    }
    .feature-card h3 {
        color: #667eea;
        margin-bottom: 0.5rem;
    }
    .feature-card p {
        color: #666;
    }
    .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-top: 3rem;
        text-align: center;
        color: white;
    }
    .stat-box h2 {
        font-size: 3rem;
        margin-bottom: 0.5rem;
    }
    .stat-box p {
        font-size: 1.2rem;
        opacity: 0.9;
    }
    .hiring-banner {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        color: white;
        padding: 3rem;
        border-radius: 20px;
        text-align: center;
        margin-top: 3rem;
        box-shadow: 0 10px 40px rgba(0,0,0,0.3);
    }
    .hiring-banner h2 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }
    .hiring-banner p {
        font-size: 1.3rem;
        margin-bottom: 2rem;
    }
    .hiring-banner .cta-button {
        background: white;
        color: #f5576c;
    }
</style>

<div class="container">
    <div class="hero">
        <h1>🚀 Welcome to BoonSkills</h1>
        <p class="tagline">Transform Your Career with Expert-Led Training in Cloud, DevOps, Automation & More</p>
        <div class="cta-buttons">
            <a href="/Courses" class="cta-button cta-primary">Explore Courses</a>
            <a href="/Services" class="cta-button cta-secondary">Consulting Services</a>
        </div>
    </div>

    <div class="features">
        <div class="feature-card">
            <div class="icon">☁️</div>
            <h3>Azure & AWS Cloud</h3>
            <p>Master multi-cloud architectures with hands-on labs and certifications.</p>
        </div>
        <div class="feature-card">
            <div class="icon">⚙️</div>
            <h3>DevOps & CI/CD</h3>
            <p>Learn modern deployment strategies and automation pipelines.</p>
        </div>
        <div class="feature-card">
            <div class="icon">🤖</div>
            <h3>Test Automation</h3>
            <p>Build enterprise-grade frameworks with Selenium, Playwright & more.</p>
        </div>
        <div class="feature-card">
            <div class="icon">🐍</div>
            <h3>Python & Java</h3>
            <p>Core to advanced programming for automation and development.</p>
        </div>
        <div class="feature-card">
            <div class="icon">🔧</div>
            <h3>ServiceNow & ITSM</h3>
            <p>Enterprise service management and workflow automation.</p>
        </div>
        <div class="feature-card">
            <div class="icon">🎯</div>
            <h3>Agile & Project Mgmt</h3>
            <p>Scrum, Kanban, and modern project delivery methodologies.</p>
        </div>
    </div>

    <div class="hiring-banner">
        <h2>🎓 We're Hiring Trainers!</h2>
        <p>Are you an expert in Cloud, DevOps, Automation, or other IT domains?<br>Join our team and empower the next generation of tech professionals.</p>
        <a href="/Contact?inquiry=trainer" class="cta-button">Apply as Trainer</a>
    </div>

    <div class="stats">
        <div class="stat-box">
            <h2>20+</h2>
            <p>Years Experience</p>
        </div>
        <div class="stat-box">
            <h2>10+</h2>
            <p>Technologies Covered</p>
        </div>
        <div class="stat-box">
            <h2>100%</h2>
            <p>Hands-On Learning</p>
        </div>
        <div class="stat-box">
            <h2>24/7</h2>
            <p>Support & Mentorship</p>
        </div>
    </div>
</div>
